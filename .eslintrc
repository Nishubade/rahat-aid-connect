{
	"extends": ["react-app", "plugin:prettier/recommended"],
	"rules": {
		"no-undef": "off",
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto",
				"printWidth": 120,
				"tabWidth": 4,
				"useTabs": true,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "none",
				"bracketSpacing": true,
				"arrowParens": "avoid"
			}
		]
	}
}
